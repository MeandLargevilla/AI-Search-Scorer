{
  "manifest_version": 3,
  "name": "AI Search Scorer - 谷歌搜索评分助手 ",
  "version": "2.0.0",
  "description": "AI Search Filter - 自动过滤内容农场与SEO垃圾，智能评分助手 | Auto-filter content farms & SEO spam with AI-powered scoring.",
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.google.com/*",
    "*://*.google.com.hk/*",
    "*://*.google.cn/*",
    "*://*.google.co.jp/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "https://api.deepseek.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/search*",
        "*://*.google.com.hk/search*",
        "*://*.google.cn/search*",
        "*://*.google.co.jp/search*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
